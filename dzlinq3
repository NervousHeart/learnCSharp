using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp5
{
    class Program
    {
        static void Main(string[] args)
        {
            bool isWork = true;
            Hospital hospital = new Hospital();
            while (isWork)
            {
                Console.Clear();
                Console.WriteLine("Больница Ракун-Сити приветсвует вас! \n1. Отсортировать больных по имени. " +
                    "\n2. Отсортировать больных по возрасту. \n3. Вывести больных с определенным заболеванием. \n4. Выход.");
                switch (Console.ReadLine())
                {
                    case "1":
                        hospital.SortName();
                        break;
                    case "2":
                        hospital.SortAge();
                        break;
                    case "3":
                        hospital.SortDisease();
                        break;
                    case "4":
                        isWork = false;
                        break;
                    default:
                        break;
                }
                Console.ReadKey();
            }
        }
    }

    class Ill
    {
        public string Name { get; private set; }
        public int Age { get; private set; }
        public string Disease { get; private set; }

        public Ill(string name, int age, string disease)
        {
            Name = name;
            Age = age;
            Disease = disease;
        }

        public void ShowInfo()
        {
            Console.WriteLine($"Имя: {Name} Возраст: {Age} Диагноз: {Disease}");
        }
    }

    class Hospital
    {
        private List<Ill> _ills;

        public Hospital()
        {
            _ills = new List<Ill>() { new Ill("Дмитрий",25,"Простуда"), new Ill("Сергей", 18, "Перелом"), new Ill("Марина", 17, "Грипп"), new Ill("Владимир", 44, "Отравление"),
                new Ill("Диана", 28, "Отравление"), new Ill("Екатерина", 40, "Грипп"), new Ill("Влад", 31, ""),new Ill("Любовь",24,"Грипп"), new Ill("Павел",55,"Грипп"), new Ill("Вера",26,"Шизофрения"),
                new Ill("Николай",23,"Простуда"), new Ill("Максим",61,"Перелом"), new Ill("Ренат",19,"Грипп"), new Ill("Влада",19,"Шизофрения"), new Ill("Николь",22,"Грипп"), };
        }

        public void SortName()
        {
            var filtredName = _ills.OrderBy(ill => ill.Name);
            foreach (var ill in filtredName)
            {
                ill.ShowInfo();
            }
        }

        public void SortAge()
        {
            var filtredName = _ills.OrderBy(ill => ill.Age);
            foreach (var ill in filtredName)
            {
                ill.ShowInfo();
            }
        }

        public void SortDisease()
        {
            Console.WriteLine("Введите название болезни: ");
            string nameDisease = Console.ReadLine().ToLower();
            var filtredName = _ills.Where(ill => ill.Disease.ToLower()==nameDisease);
            foreach (var ill in filtredName)
            {
                ill.ShowInfo();
            }
        }
    }
}
